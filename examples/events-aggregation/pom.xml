<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.hawkular.alerts</groupId>
  <artifactId>events-aggregation</artifactId>
  <version>1.1.0.Final</version>

  <name>Hawkular Alerting Examples: Events Aggregation</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <version.net.sf.json-lib>2.3</version.net.sf.json-lib>
    <version.org.codehaus.groovy>2.4.5</version.org.codehaus.groovy>
    <version.org.codehaus.groovy.maven>1.0</version.org.codehaus.groovy.maven>
    <version.org.codehaus.groovy.modules.http-builder>0.7</version.org.codehaus.groovy.modules.http-builder>
  </properties>

  <dependencies>

    <dependency>
      <groupId>org.codehaus.groovy</groupId>
      <artifactId>groovy-all</artifactId>
      <version>${version.org.codehaus.groovy}</version>
    </dependency>

    <dependency>
      <groupId>org.codehaus.groovy.modules.http-builder</groupId>
      <artifactId>http-builder</artifactId>
      <version>${version.org.codehaus.groovy.modules.http-builder}</version>
    </dependency>

    <dependency>
      <groupId>net.sf.json-lib</groupId>
      <artifactId>json-lib</artifactId>
      <version>${version.net.sf.json-lib}</version>
      <classifier>jdk15</classifier>
    </dependency>

  </dependencies>

  <profiles>

    <profile>
      <id>marketing</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.groovy.maven</groupId>
            <artifactId>gmaven-plugin</artifactId>
            <version>${version.org.codehaus.groovy.maven}</version>
            <executions>
              <execution>
                <id>create-definitions</id>
                <phase>validate</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <properties>
                    <definitions>marketing-definitions.json</definitions>
                  </properties>
                  <source>${basedir}/src/test/groovy/create_definitions.groovy</source>
                </configuration>
              </execution>
              <execution>
                <id>send-events-for-marketing</id>
                <phase>validate</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <source>${basedir}/src/test/groovy/send_events_marketing.groovy</source>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>fraud</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.groovy.maven</groupId>
            <artifactId>gmaven-plugin</artifactId>
            <version>${version.org.codehaus.groovy.maven}</version>
            <executions>
              <execution>
                <id>create-definitions</id>
                <phase>validate</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <properties>
                    <definitions>fraud-definitions.json</definitions>
                  </properties>
                  <source>${basedir}/src/test/groovy/create_definitions.groovy</source>
                </configuration>
              </execution>
              <execution>
                <id>send-events-for-fraud</id>
                <phase>validate</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <source>${basedir}/src/test/groovy/send_events_fraud.groovy</source>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>loyalty</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.groovy.maven</groupId>
            <artifactId>gmaven-plugin</artifactId>
            <version>${version.org.codehaus.groovy.maven}</version>
            <executions>
              <execution>
                <id>create-definitions</id>
                <phase>validate</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <properties>
                    <definitions>loyalty-definitions.json</definitions>
                  </properties>
                  <source>${basedir}/src/test/groovy/create_definitions.groovy</source>
                </configuration>
              </execution>
              <execution>
                <id>send-events-for-loyalty</id>
                <phase>validate</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <source>${basedir}/src/test/groovy/send_events_loyalty.groovy</source>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>


  </profiles>

</project>
